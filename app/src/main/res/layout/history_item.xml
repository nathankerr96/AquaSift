<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/history_item_graph"
        android:layout_marginTop="10dp"/>
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/history_item_title"
        android:text="Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/history_item_date"
        android:textSize="@dimen/history_date_text_size"
        android:gravity="left"
        android:text="Date"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/history_item_type"
        android:textSize="@dimen/history_type_text_size"
        android:gravity="left"
        android:layout_marginBottom="10dp"
        android:text="concentration"/>

</LinearLayout>